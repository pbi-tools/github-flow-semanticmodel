{
  "version": "0.14",
  "deployments": {
    "Model": {
      "mode": "Dataset",
      "source": {
        "type": "Folder",
        "path": "./Sales.Dataset/definition"
      },
      "authentication": {
        "type": "ServicePrincipal",
        "tenantId": "pbitools.org",
        "clientId": "708b6947-c640-4a74-9100-e4b3312b7182",
        "clientSecret": "%PBI_CLIENT_SECRET%"
      },
      "credentials": [
        {
          "match": {
            "datasourceType": "Web",
            "connectionDetails": {
              "url": "https://raw.githubusercontent.com/pbi-tools/sales-sample/data"
            }
          },
          "updateMode": "NotSpecified",
          "type": "Anonymous"
        }
      ],
      "options": {
        "refresh": {
          "enabled": true,
          "skipNewDataset": false,
          "type": "Automatic",
          "objects": {
            "About": "Full"
          },
          "tracing": {
            "enabled": true,
            "logEvents": {
              "filter": [
                "*|ReadData|*"
              ]
            },
            "summary": {
              "events": [
                "TabularRefresh"
              ],
              "objectTypes": [
                "Partition"
              ],
              "outPath": "./.artifacts/refresh-summary.csv",
              "console": true
            }
          }
        },
        "dataset": {
          "replaceParameters": true,
          "setCredentials": true,
          "bpa": {
            "sources": [
              "https://raw.githubusercontent.com/microsoft/Analysis-Services/master/BestPracticeRules/BPARules.json"
            ],
            "failOnWarning": false
          }
        },
        "console": {}
      },
      "parameters": {
        "WORKSPACE": "github-flow-demo"
      },
      "environments": {
        "Development": {
          "workspace": "{{WORKSPACE}} [DEV]",
          "displayName": "Sales [{{ENVIRONMENT}}]"
        },
        "Production": {
          "workspace": "{{WORKSPACE}}",
          "displayName": "Sales",
          "refresh":{
            "type": "Full"
          }
        }
      }
    }
  }
}